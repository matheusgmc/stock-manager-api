// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  price_unit Int
  amount Int @default(0)
  created_at String
  updated_at String

  @@map("products")
} 

model Customer {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  @@map("customers")
}
